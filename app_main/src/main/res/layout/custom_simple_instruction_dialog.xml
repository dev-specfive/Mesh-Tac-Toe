<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="28dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_curve_with_blue_outline"
            android:backgroundTint="@color/profile_color_bg"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/custom_simple_dialog_with_logo_content_logo_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:contentDescription="@null"
                android:visibility="gone"
                tools:ignore="VectorDrawableCompat" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/top_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="1dp"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:visibility="gone"
                tools:ignore="SpUsage"
                tools:text="Exit Confirmation"
                tools:visibility="visible" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/custom_simple_dialog_with_logo_content_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:maxHeight="350dp"
                android:textColor="@color/white"
                android:textSize="14dp"
                tools:ignore="SpUsage"
                tools:text="Are you sure to exit the game" />

            <ImageView
                android:id="@+id/ic_bottom_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:contentDescription="@null"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/custom_simple_instruction_dialog_negative_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/white_curved_drawable"
                    android:backgroundTint="@color/white"
                    android:visibility="gone"
                    tools:ignore="UnusedAttribute"
                    tools:visibility="visible">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/custom_simple_instruction_dialog_negative_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:paddingStart="28dp"
                        android:paddingEnd="28dp"
                        android:paddingBottom="4dp"
                        android:text="Cancel"
                        android:textColor="@color/profile_color_bg"
                        android:textSize="16dp"
                        tools:ignore="SpUsage" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/custom_simple_dialog_with_logo_content_positive_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.5"
                    android:background="@drawable/white_curved_drawable"
                    android:backgroundTint="?colorError"
                    android:visibility="visible"
                    tools:ignore="UnusedAttribute">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/custom_simple_dialog_with_logo_content_positive_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:text="@string/exit"
                        android:textColor="?colorSurface"
                        android:textSize="20dp"
                        tools:ignore="SpUsage" />

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/custom_simple_dialog_instruction_dialog_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="@null"
            android:src="@drawable/baseline_close_24"
            tools:ignore="VectorDrawableCompat" />

    </RelativeLayout>

</FrameLayout>